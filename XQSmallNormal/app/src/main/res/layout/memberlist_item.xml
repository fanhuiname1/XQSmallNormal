<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp20"
    android:layout_marginLeft="@dimen/dp16"
    android:layout_marginRight="@dimen/dp15"
    android:layout_marginBottom="@dimen/dp15">

    <ImageView
        android:id="@+id/member_image"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="@dimen/dp3"
        />
    <TextView
        android:id="@+id/member_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_toRightOf="@+id/member_image"
        android:text="K-S-H"
        android:textColor="#ff262626"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/member_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/member_nickname"
        android:text="（137****6666）"
        android:textColor="#ff262626"
        android:textSize="15sp"/>
    <RelativeLayout
        android:layout_below="@+id/member_tel"
        android:layout_toRightOf="@+id/member_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/member_atten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注时间："
            android:textColor="#ff9e9e9e"
            android:textSize="12sp" />
        <TextView
            android:layout_toRightOf="@+id/member_atten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-09-23"/>

        <TextView
            android:id="@+id/member_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已关注："
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp30"
            android:textColor="#ff9e9e9e"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/member_attentDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp12"
            android:textColor="#ff9e9e9e"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:layout_alignParentRight="true"
            android:textColor="#ff9e9e9e"
            android:textSize="12sp"/>
    </RelativeLayout>
</RelativeLayout>