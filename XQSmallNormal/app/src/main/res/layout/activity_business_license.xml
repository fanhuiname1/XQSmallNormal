<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="android.small.indeedfortunate.xqsmallnormal.activity.login.register.Business_licenseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                style="@style/ToolBarStyle">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/nav_back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商户认证"
                    android:textColor="#ff262626"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    />
            </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp35"
            android:background="#F7F7F7">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请提供身份证信息"
                android:textColor="#ff5b5b5b"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_gravity="center_vertical"
                android:textSize="13sp"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击上传带头像一面"
                            android:textColor="#ff5b5b5b"
                            android:textSize="@dimen/sp14" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp8"
                                android:layout_marginTop="@dimen/dp8"
                                android:src="@mipmap/home_image_one" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/home_image_defa" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/sl1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/userlicense"
                            android:textColor="#ffff9f00"
                            android:textSize="@dimen/sp13" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击上传带国徽一面"
                            android:textColor="#ff5b5b5b"
                            android:textSize="@dimen/sp14" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp8"
                                android:layout_marginTop="@dimen/dp8"
                                android:src="@mipmap/home_image_two" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/home_image_defa" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/sl2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/userlicense"
                            android:textColor="#ffff9f00"
                            android:textSize="@dimen/sp13" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginBottom="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:background="#CCCCCC"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:text="点击上传手持身份证证件照"
                    android:textColor="#ff5b5b5b"
                    android:textSize="@dimen/sp14" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_image_seven" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/home_image_defa" />
                </FrameLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:background="#F7F7F7">

                <TextView
                    android:id="@+id/skxx_Tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:text="请提供营业执照信息"
                    android:textColor="#ff5b5b5b"
                    android:textSize="@dimen/sp13" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业执照附件"
                android:textColor="#ff5b5b5b"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp5"
                android:textSize="@dimen/sp14" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp15">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_image_four" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/home_image_defa" />
                </FrameLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/userlicense"
                android:textColor="#ffff9f00"
                android:textSize="@dimen/sp13"
                android:layout_marginLeft="@dimen/dp65"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:background="#F7F7F7">

                <TextView
                    android:id="@+id/mTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:text="请提供门店信息"
                    android:textColor="#ff5b5b5b"
                    android:textSize="@dimen/sp13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:text="（注:门头为商户招牌照片，门脸商户内景照片！）"
                    android:textColor="#ffff9f00"
                    android:textSize="@dimen/sp11" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="门头照片"
                        android:textColor="#ff5b5b5b"
                        android:textSize="@dimen/sp14" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp8"
                            android:layout_marginTop="@dimen/dp8"
                            android:src="@mipmap/home_image_five" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/home_image_defa" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="门脸照片"
                        android:textColor="#ff5b5b5b"
                        android:textSize="@dimen/sp14" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp8"
                            android:layout_marginTop="@dimen/dp8"
                            android:src="@mipmap/home_image_five" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/home_image_defa" />
                    </FrameLayout>


                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:background="#F7F7F7">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:text="请填写收款信息"
                    android:textColor="#ff5b5b5b"
                    android:textSize="@dimen/sp13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="（注：收款账户户名必须和身份证信息一致！）"
                    android:textColor="#ffff9f00"
                    android:layout_marginRight="@dimen/dp15"
                    android:textSize="@dimen/sp11" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:background="@drawable/myrect">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择收款账号类型"
                    android:textColor="#ff262626"
                    android:textSize="17sp"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="@dimen/dp130"
                        android:layout_height="@dimen/dp35"
                        android:button="@null"
                        android:checked="true"
                        android:layout_marginLeft="26dp"
                        android:paddingLeft="17dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="17dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@drawable/selector_textcolor"
                        android:background="@drawable/business_background_selector"
                        android:text="个人收款账户"/>

                    <RadioButton
                        android:layout_width="@dimen/dp130"
                        android:layout_height="@dimen/dp35"
                        android:button="@null"
                        android:layout_marginLeft="26dp"
                        android:paddingLeft="17dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="17dp"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="#ff9e9e9e"
                        android:background="@drawable/business_background_selector"
                        android:text="对公收款账户"/>
                </RadioGroup>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="银行账号"
                    android:textColor="#ff262626"
                    android:textSize="15sp" />

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请填写收款银行账号"
                    android:maxLength="30"
                    android:textColor="@color/cm_black_text6"
                    android:textSize="14dp" />


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="#E8E8E8"></LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="收款账户户名"
                    android:textColor="#ff262626"
                    android:textSize="15sp" />

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请填写收款账户户名"
                    android:maxLength="30"
                    android:textColor="@color/cm_black_text6"
                    android:textSize="14dp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="所属银行"
                    android:textColor="#ff262626"
                    android:textSize="15sp" />

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请选择收款所属银行"
                    android:maxLength="30"
                    android:textColor="@color/cm_black_text6"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E8E8E8"></LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="收款支行"
                    android:textColor="#ff262626"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/account_num_et"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请填写收款银行支行"
                    android:maxLength="30"
                    android:textColor="@color/cm_black_text6"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E8E8E8"></LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp15"
                android:background="#E8E8E8"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp35"
                    android:text="上传银行卡照片"
                    android:textColor="#ff262626"
                    android:textSize="@dimen/sp15" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_image_three" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/home_image_defa" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp55"
                    android:text="@string/userlicense"
                    android:textColor="#ffff9f00"
                    android:textSize="@dimen/sp13" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp100"
                android:background="#FBFBFB"
                android:layout_marginTop="@dimen/dp18"
                android:gravity="center">
                <Button
                    android:layout_width="@dimen/dp325"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="@dimen/dp13"
                    android:layout_marginBottom="@dimen/dp13"
                    style="@style/LoginButton"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
