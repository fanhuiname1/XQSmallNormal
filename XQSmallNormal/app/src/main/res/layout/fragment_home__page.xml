<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.small.indeedfortunate.xqsmallnormal.activity.login.fragment.Home_PageFragment">
    <include
        android:id="@+id/main_head"
        layout="@layout/main_head"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_head"
        android:id="@+id/scrollView2">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@mipmap/home_head_down">
          </ImageView>
           <LinearLayout
               android:id="@+id/ll_checked"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp35"
               android:background="#FDAE2E"
               android:orientation="horizontal"
               android:gravity="center">
               <ImageView
                   android:layout_width="@dimen/dp13"
                   android:layout_height="@dimen/dp13"
                   android:src="@mipmap/nav_msg"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="商户入驻审核中，请等待审核结果"
                   android:textColor="#ffffffff"
                   android:textSize="12sp"
                   android:layout_marginLeft="@dimen/dp8"/>
           </LinearLayout>
        <RelativeLayout
            android:id="@+id/Rl_Collecting"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp200"
            android:background="@mipmap/home_bg"
            android:layout_below="@+id/ll_checked"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp15">
            <RadioGroup
                android:id="@+id/Rg_today_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp13"
                android:layout_alignParentRight="true">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日"
                    android:textSize="@dimen/sp12"
                    android:textColor="@drawable/rg_textcolor"
                    android:button="@null"/>
                <View
                    android:layout_width="@dimen/dp2"
                    android:layout_height="@dimen/dp10"
                    android:layout_gravity="center_vertical"
                    android:background="#ff9e9e9e"
                    android:layout_marginLeft="@dimen/dp3"
                    android:layout_marginRight="@dimen/dp3"></View>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:textSize="@dimen/dp12"
                    android:textColor="@drawable/rg_textcolor"
                    android:layout_marginRight="@dimen/dp14"
                    android:text="历史"/>
            </RadioGroup>
          <LinearLayout
              android:layout_below="@+id/Rg_today_history"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="@dimen/dp19"
              android:layout_marginRight="@dimen/dp8">
              <TextView
                  android:id="@+id/Tv_Gathering"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="收款统计(元)"
                  android:textColor="#ff999999"
                  android:textSize="@dimen/dp11"
                  android:layout_below="@+id/Rg_today_history"
                  />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="@dimen/dp5">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="￥"
                      android:textColor="#ff262626"
                      android:textSize="@dimen/sp15" />
                  <TextView
                      android:id="@+id/Tv_"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="00.00"
                      android:textStyle="bold"
                      android:textColor="#ff262626"
                      android:textSize="@dimen/sp30"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="@dimen/dp15">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:gravity="center">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="36"
                          android:textColor="#ff262626"
                          android:textSize="20sp" />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="交易笔数"
                          android:textColor="#ff999999"
                          android:textSize="11sp"
                          />
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:gravity="center">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="36"
                          android:textColor="#ff262626"
                          android:textSize="20sp" />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="会员统计(人）"
                          android:textColor="#ff999999"
                          android:textSize="11sp"
                          />
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:gravity="center">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="36"
                          android:textColor="#ff262626"
                          android:textSize="20sp" />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="反金统计(元）"
                          android:textColor="#ff999999"
                          android:textSize="11sp"
                          />
                  </LinearLayout>

              </LinearLayout>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp1"
                  android:background="#E8E8E8"
                  android:layout_marginTop="@dimen/dp17"
                  android:layout_marginBottom="@dimen/dp10"></View>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="查看营收记录  >"
                  android:textColor="#ff262626"
                  android:textSize="@dimen/sp12"
                  android:layout_gravity="right"
                  android:layout_marginRight="@dimen/dp8" />
          </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/Rl_Collecting">
            <LinearLayout
                android:id="@+id/LL_golden_ratio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:orientation="horizontal"
                android:background="@drawable/myrect">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返金比例"
                    android:textColor="#ff262626"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginLeft="@dimen/dp15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0%"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp16"
                    android:paddingTop="@dimen/dp12"
                    android:paddingBottom="@dimen/dp13"
                    android:textColor="#ffff9f00"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进入编辑  >"
                    android:textColor="#ffbbbbbb"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp105" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp18"
                    android:background="@drawable/myrect">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收款优惠"
                            android:layout_marginLeft="@dimen/dp15"
                            android:layout_marginTop="@dimen/dp15"
                            android:textColor="#ff262626"
                            android:textStyle="bold"
                            android:textSize="@dimen/sp15"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="进入编辑  >"
                            android:layout_marginLeft="@dimen/dp170"
                            android:textColor="#ffbbbbbb"
                            android:layout_marginTop="@dimen/dp8"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/sp12"
                            />
                    </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E8E8E8"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp15"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未设置收款优惠"
                        android:textColor="#ff9e9e9e"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp22"
                        android:textSize="14sp"/>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp13"
                        android:layout_marginRight="@dimen/dp8"/>

                </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_marginRight="@dimen/dp8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/myrect"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp15"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp18"
                android:layout_marginTop="@dimen/dp20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp15"
                    android:text="收款信息"
                    android:textColor="#ff262626"
                    android:textSize="15sp"
                   />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E8E8E8"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未设置收款优惠"
                    android:textColor="#ff9e9e9e"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp22"
                    android:textSize="14sp"/>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginLeft="@dimen/dp19"
                    android:layout_marginRight="@dimen/dp10"></ListView>
            </LinearLayout>
        </LinearLayout>


       </RelativeLayout>

    </ScrollView>

</RelativeLayout>
