<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="android.small.indeedfortunate.xqsmallnormal.Base_InfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:fitsSystemWindows="true"
        style="@style/ToolBarStyle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/nav_back"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#ff262626"
            android:text="基本信息"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="#ff262626"
            android:textSize="14sp"

            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:visibility="gone"
            android:textColor="#ffff9f00"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp15"
            />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_marginBottom="12dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商户LOGO"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="#ff262626"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/information_logo_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_btn_logo"
                    android:onClick="logo_add"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_alignParentRight="true"
                    tools:ignore="OnClick" />
            </RelativeLayout>
            <ImageView
                style="@style/FixationIvStyle" />

            <LinearLayout
              style="@style/BasicStyle">
                <TextView
                    style="@style/FixationStyle"
                    android:text="商户简称"
                    />
                <TextView
                    style="@style/FixationTextStyle"
                    android:text="大渔铁板烧"
                     />
            </LinearLayout>
            <ImageView
                style="@style/FixationIvStyle" />
            <LinearLayout
                style="@style/BasicStyle">
                <TextView
                    style="@style/FixationStyle"
                    android:text="所属行业"
                    />


                <TextView
                    android:id="@+id/information_selector_industry"
                    style="@style/FixationTextStyle"
                    android:onClick="selector_industry"
                    android:text="美食/铁板烧"

                    tools:ignore="OnClick" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="#FBFBFB" />

            <LinearLayout
                style="@style/BasicStyle">
                <TextView
                    style="@style/FixationStyle"
                    android:text="所属城市"
                     />


                <TextView
                    style="@style/FixationTextStyle"
                    android:text="山西省 太原市 临汾县"
                   />
            </LinearLayout>
            <ImageView
                style="@style/FixationIvStyle" />
            <LinearLayout
                style="@style/BasicStyle">
                <TextView
                    style="@style/FixationStyle"
                    android:text="详细地址"
                     />


                <TextView
                    style="@style/FixationTextStyle"
                    android:text="平阳南街 26号"
                     />
            </LinearLayout>
            <ImageView
                style="@style/FixationIvStyle" />
            <LinearLayout
                style="@style/BasicStyle">
                <TextView
                    style="@style/FixationStyle"
                    android:text="地图标记"
                    />


                <TextView
                    style="@style/FixationTextStyle"
                    android:text="已设置"
                   />
            </LinearLayout>
            <ImageView
                style="@style/FixationIvStyle" />
            <LinearLayout
                style="@style/BasicStyle">
                <TextView
                    style="@style/FixationStyle"
                    android:text="商圈"
                     />

                <TextView
                    style="@style/FixationTextStyle"
                    android:text="国贸"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="#FBFBFB" />

            <LinearLayout
                style="@style/BasicStyle">
                <TextView
                    style="@style/FixationStyle"
                    android:text="营业时间"
                   />


                <TextView
                    style="@style/FixationTextStyle"
                    android:text="请选择营业时间"
                   />

            </LinearLayout>
            <ImageView
                style="@style/FixationIvStyle" />

            <LinearLayout
                style="@style/BasicStyle">
                <TextView
                    style="@style/FixationStyle"
                    android:text="商户简介"
                     />


                <TextView
                    style="@style/FixationTextStyle"
                    android:text="请填写商户简介"
                    />

            </LinearLayout>
            <ImageView
                style="@style/FixationIvStyle" />
            <LinearLayout
                style="@style/BasicStyle">
                <TextView
                    style="@style/FixationStyle"
                    android:text="便利设施"
                   />
                <TextView
                    style="@style/FixationTextStyle"
                    android:text="请选择便利设施"
                     />
            </LinearLayout>
            <ImageView
                style="@style/FixationIvStyle" />
            <LinearLayout
                style="@style/BasicStyle">
                <TextView
                    style="@style/FixationStyle"
                    android:text="客服电话"
                     />


                <TextView
                    style="@style/FixationTextStyle"
                    android:text="1370124666@163.com"
                    />
            </LinearLayout>
            <ImageView
                style="@style/FixationIvStyle" />

            <LinearLayout
                style="@style/BasicStyle">
                <TextView
                    style="@style/FixationStyle"
                    android:text="联系邮箱"
                    />

                <TextView
                    style="@style/FixationTextStyle"
                    android:text="1370124666@163.com"
                    />
            </LinearLayout>
            <ImageView
                style="@style/FixationIvStyle" />

            <LinearLayout
                style="@style/BasicStyle">
                <TextView
                    style="@style/FixationStyle"
                    android:text="推荐人"
                     />
                <TextView
                    style="@style/FixationTextStyle"
                    android:text="请填写推荐人编号"
                     />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp15"
                android:background="#FBFBFB" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
