<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.small.indeedfortunate.xqsmallnormal.activity.login.register.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:fitsSystemWindows="true"
        style="@style/ToolBarStyle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textColor="#ff262626"
            android:text="注册"/>
        <TextView
            android:id="@+id/close_regist_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="close_regist"
            android:drawableRight="@mipmap/login_btn_close"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            tools:ignore="OnClick" />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_logo"
        android:layout_gravity="center"
        android:layout_marginTop="49dp"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp60">
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="14sp"
            android:hint="请输入手机号"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:drawableLeft="@mipmap/login_icon1"
            android:drawableBottom="@drawable/shape_et_bottom_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="16"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:hint="请输入密码"
                android:textSize="14sp"
                android:drawableBottom="@drawable/shape_et_bottom_line"
                android:drawableLeft="@mipmap/login_icon2" />
            <TextView
                android:id="@+id/Tv_gain_authcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="20dp"
                android:layout_marginTop="15dp"
                android:text="获取验证码"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
            <EditText
                android:id="@+id/New_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="16"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:hint="请设置新密码 (6-16位数字或密码)"
                android:textSize="14sp"
                android:drawableBottom="@drawable/shape_et_bottom_line"
                android:drawableLeft="@mipmap/login_icon4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="20dp"
                android:layout_marginTop="15dp"
                android:drawableRight="@mipmap/login_btn_nosee"
                />
        </RelativeLayout>
    </FrameLayout>


    <Button
        android:id="@+id/Register_Btn"
        style="@style/LoginButton"
        android:paddingRight="147dp"
        android:paddingLeft="147dp"
        android:layout_gravity="center"
        android:text="注册"
        android:layout_marginTop="29dp"
        android:textColor="#ffffffff"
        android:textSize="15sp"
      />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即表示您同意"
            android:textSize="12sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/That_clause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《小确幸商家服务条款》"
            android:textColor="#F19700"
            android:textSize="12sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</LinearLayout>
